
.details
	color #666969
	display flex
	flex-direction column
	justify-content space-between
	height 100%

	.details_photo_box
		display flex
		width 100%
		justify-content: center;
		align-items center
		.img_wrapper
			width 35%
			min-width 150px
			position relative
			.in_anti_maydan
				position absolute
				width 30%
				bottom 15%
				right -10%
				img
					width 100%
			@media screen and (max-width: 500px)
				width 80%
			>img
				width 100%
				border-radius 50%
	.details_text_wrapper
		margin 2rem 0

	.details_text_wrapper
		hr.details_text_separator
			width 50%
			border 1px solid mainColor
		h3,h5
			text-align center
		h3
			@media screen and (max-width: 500px)
				font-size 2em
		h5
			@media screen and (max-width: 500px)
				font-size 1.2em
	.icons
		margin 1rem 0
		display flex
		justify-content center
		position relative
		@media screen and (max-width: 500px)
			flex-wrap wrap
			flex-direction column
			align-items center
		.icon
			cursor pointer
			width 14%
			margin 0 15px
			@media screen and (max-width: 500px)
				width 30%
				margin-top 10px
			.icon_wrapper
				flex-basis 100%
				position relative
				align-self center
				img
					width 100%
			.icon_text
				width 100%
				color mainColorFontDarken
				font-size 1.2em
				font-weight bold
				text-align center
				align-self center
	.declaration_links
		width 80%
		max-width 300px
		margin .5rem auto
		table
			font-size 1.6em
			margin 0 0 0 0
		.empty_declarations
			text-align center
			font-size 1.6em

	.send_info
		margin-top .5rem
		text-align center
		.btn_send
			line-height 2em
			padding 1em 3em
			height auto
			background #28dfd1
			font-weight bold
			a
				color #FFF
			@media screen and (max-width: 500px)
				padding 1em 2em
.modal_table_wrapper
	position absolute
	top 0
	left 0
	width 100%
	z-index 99999

