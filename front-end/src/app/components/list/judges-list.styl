tableFontColor = #585858;
tableBackgroundColor = #e1e1e1;
inputBgColor = rgba(255, 255, 255, 0.25)
tableBackgroundColorHover = #9b9b9b;
borderColor = #3f3f3f
tdPadding = 1em 1.5em;
inputTextColor = #ffffff

.table-directive
  .search-block-wrapper
    position relative
    input
      padding-left 3.5rem
      padding-right 1em
      box-sizing border-box
      color inputTextColor
      &:focus
        background inputBgColor
        border-bottom 1px solid mainColor
    .icon
      width 2rem
      position absolute
      top 0.8em
      left 0.8em
      img
        transition all 0.6s
        width 100%
        filter: grayscale(100%);
    @css {
      input:focus + .icon > img {
        filter: none !important;
      }
    }

  .table__wrapper
    background tableBackgroundColor
    @media screen and (min-width: 992px)
      min-width 960px
    @media screen and (max-width: 992px) and (min-width: 768px)
      width 100%
      min-width 768px
      max-width 960px
    @media screen and (max-width: 768px) and (min-width: 480px)
      width 100%
      min-width 480px
      max-width 768px
    table
      width 100%
      min-width 100%
      .region_col
        @media screen and (max-width: 400px)
          display none
      thead
        border-bottom-color borderColor
        tr
          th
            padding tdPadding
            cursor pointer
          .flex-container
            display flex
          .icons
            margin-left 0.5em
          .up
            display inine-block
            color mainColorDarken
          .down
            display none
          th[data-reversed='true']
            .up
              display none
            .down
              display inline-block
              color mainColorDarken

      tbody
        tr
          background transparent
          cursor pointer
          td
            color tableFontColor
            border-radius 0
            padding tdPadding
        tr:nth-child(odd)
          background rgba(0,0,0,0.09)
        tr:hover
          background tableBackgroundColorHover
          td
            color logoColor
            border-radius 0
    .pagination
      display flex
      flex-direction row-reverse
      background none
      border-top 1px solid black
      .flex-container
        padding 2em
        box-sizing border-box
        width 50%
        background transparent
        display flex
        align-items center
        flex-direction row-reverse
        div
          margin 0.5em
          &.counter
            display flex
            span
              color tableFontColor
              margin 2px


