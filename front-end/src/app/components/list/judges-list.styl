tableFontColor = #585858;
tableBackgroundColor = #e1e1e1;
tableBackgroundColorHover = #9b9b9b;
borderColor = #3f3f3f
tdPadding = 1em 1.5em;

.table__wrapper
  background tableBackgroundColor
  min-width 100%
  table
    width 100%
    min-width 100%
    thead
      border-bottom-color borderColor
      tr
        th
          padding tdPadding
          cursor pointer
        .flex-container
          display flex
        .icons
          margin-left 0.5em
        .up
          display inine-block
          color mainColorDarken
        .down
          display none
        th[data-reversed='true']
          .up
            display none
          .down
            display inline-block
            color mainColorDarken

    tbody
      tr
        background transparent
        cursor pointer
        transition all 0.5s
        td
          color tableFontColor
          border-radius 0
          padding tdPadding
      tr:nth-child(odd)
        background rgba(0,0,0,0.09)
      tr:hover
        background tableBackgroundColorHover
        td
          color logoColor
          border-radius 0
  .pagination
    display flex
    flex-direction row-reverse
    background none
    border-top 1px solid black
    .flex-container
      padding 2em
      box-sizing border-box
      width 50%
      background transparent
      display flex
      align-items center
      flex-direction row-reverse
      div
        margin 0.5em
        span
          color tableFontColor


